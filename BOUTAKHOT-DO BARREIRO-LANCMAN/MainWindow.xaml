<Window x:Class="BOUTAKHOT_DO_BARREIRO_LANCMAN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BOUTAKHOT_DO_BARREIRO_LANCMAN"
        mc:Ignorable="d"
		Title="OpenFoodFacts Serch Engine"
        Height="768" Width="1024"
        Background="GreenYellow"
        WindowState="Maximized">
    <Grid>
        <ScrollViewer>
            <Border
                BorderThickness="2,2,2,2"
                Background="#D8D5E0"
                Margin="2,2,2,2"
            >
                
                <WrapPanel
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                >
                    <StackPanel
                        Width="980"
                    >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                                Text="Barcode search : "
                                FontWeight="Bold"
                                FontSize="20"
                            />

                            <TextBox
                                Width="200"
                                Text=""
                                Margin="6,0,0,0"
                            />

                            <Button
                                Content="Search"
                                Width="200"
                                Margin="3,0,0,0"
                                FontSize="20"
                                FontWeight="Bold"
                                Background="White"
                                Click="SearchBarcodeClick"
                            />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Text="Text search :"
                                FontWeight="Bold"
                                FontSize="20"
                            />

                            <TextBox
                                Width="200"
                                Text=""
                                Margin="48,0,0,0"
                            />

                            <Button
                                Content="Search"
                                Width="200"
                                Margin="3,0,0,0"
                                FontSize="20"
                                FontWeight="Bold"
                                Background="White" 
                                Click="SearchNameClick"
                            />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Text="Category search :"
                                FontWeight="Bold"
                                FontSize="20"
                            />

                            <ComboBox 
                                x:Name="CategoryBox"
                                Width="200"
                                Margin="2,0,0,0"
                                ItemsSource="{Binding m_list_categories}" 
                            />

                            <Button
                                Content="Search"
                                Width="200"
                                Margin="3,0,0,0"
                                FontSize="20"
                                FontWeight="Bold"
                                Background="White"
                                Click="SearchCategoryClick"
                            />
                        </StackPanel>

                        <ListBox 
                            x:Name="Box"
                            ItemsSource="{Binding m_list_products}"
                            Margin="20"
                            SelectedItem=""
                            Height="550"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Visible"
                        >

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">

                                        <Image 
                                            Width="75"
                                            Source="{Binding image_url}"
                                        />

                                        <StackPanel Orientation="Vertical" Width="150">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding product_name}"/>
                                                <TextBlock Text="{Binding barcode}"/>
                                                <TextBlock Text="{Binding brand}"/>
                                                <TextBlock Text="{Binding expiration_date}"/>
                                                <TextBlock Text="{Binding nutriscore}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Orientation="Vertical" Width="300">
                                            <TextBlock Text="{Binding ingredients}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </WrapPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>
